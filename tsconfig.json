{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
